{
	"author": "Thomas Bella",

	"name": "uDomainFlag",
	"description": "__MSG_description__",

	"manifest_version": 3,

	"default_locale": "en",

	"version": "2.3.0",

	"background": {
		"scripts": ["script/sentry.min.js", "script/storage.js", "script/country.js", "script/parameters.js", "script/domainflag.js", "background.js"]
	},

	"icons": {
		"16": "images/logo-16x16.png",
		"32": "images/option_favicon.png",
		"48": "images/logo-48x48.png",
		"128": "images/logo-128x128.png",
		"256": "images/logo-256x256.png"
	},

	"action": {
		"browser_style": false,
		"default_icon": "images/info.png"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "udf@bella.network",
			"strict_min_version": "109.0"
		}
	},

	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},

	"permissions": [
		"storage",
		"tabs",
		"activeTab",
		"alarms",
		"webRequest"
	],

	"host_permissions": [
		"*://*/*"
	]
}
